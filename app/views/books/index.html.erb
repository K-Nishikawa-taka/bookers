<h1>Books</h1>

<% @books.each do |book| %>
  <table>
    <span>
      <%= book.title %>
    </span>
    <span>
      <%= book.body %>
    </span>
    <span>
      <%= link_to "Show", book_path(book.id) %>
      <%= link_to "Edit", edit_book_path(book.id) %>
      <%= link_to "Delete", book_path(book.id), method: :delete %>
    </span>
  </table>
<% end %>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
  <p>title</p>
  <%= f.text_field :title %>
  <p>body</p>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>
